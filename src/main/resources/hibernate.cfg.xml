<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


        <hibernate-configuration>
            <session-factory>
                <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
                <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
                <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/shop_hibernate</property>
                <property name="hibernate.connection.username">root</property>
                <property name="hibernate.connection.password">Nata1948</property>
                <property name="show_sql">false</property>
                <property name="hibernate.enable_lazy_load_no_trans">true</property>
                <property name="hbm2ddl.auto">update</property>
                <mapping resource="model/Category.hbm.xml"/>
                <mapping resource="model/Product.hbm.xml"/>
                <mapping resource="model/User.hbm.xml"/>
                <mapping resource="model/Order.hbm.xml"/>
            </session-factory>
        </hibernate-configuration>

